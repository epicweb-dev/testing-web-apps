{
  "name": "testing-web-apps",
  "private": true,
  "kcd-workshop": {
    "title": "Testing Web Apps ðŸ§ª",
    "root": true
  },
  "scripts": {
    "build": "npm run build --if-present --workspaces",
    "start": "kcdshop start",
    "dev": "kcdshop start",
    "test": "npm run test --silent --prefix playground",
    "test:e2e": "npm run test:e2e --silent --prefix playground",
    "test:e2e:dev": "npm run test:e2e:dev --silent --prefix playground",
    "test:e2e:run": "npm run test:e2e:run --silent --prefix playground",
    "pretest:all": "npm run build",
    "test:all": "node ./scripts/test.mjs",
    "setup": "node ./setup.mjs",
    "setup:custom": "node ./scripts/setup-custom.mjs",
    "lint": "npm run lint --if-present --workspaces",
    "format": "prettier --write .",
    "typecheck": "tsc -b",
    "validate:all": "npm-run-all --parallel --print-label --print-name --continue-on-error test:all lint typecheck"
  },
  "keywords": [],
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "dependencies": {
    "@kentcdodds/workshop-app": "^1.32.4",
    "@prisma/client": "^4.13.0",
    "@radix-ui/react-popover": "^1.0.5",
    "prisma": "^4.13.0"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "workspaces": [
    "exercises/*/*",
    "examples/*"
  ],
  "engines": {
    "node": "18 || 19",
    "npm": ">=8.16.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "execa": "^7.1.1",
    "fs-extra": "^11.1.1"
  }
}
